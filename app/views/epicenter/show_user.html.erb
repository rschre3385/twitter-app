<div class="container">
  <div class="col-md-6">
  <div class="page-header">
    <h1>@<%= @user.username %>'s Profile & Tweets</h1>
  </div>
  <div>
    <div class="panel panel-default">
      <div class="panel-heading" style="height: 50px;padding:10px;">
        <div class="col-md-6">
        <p>Profile</p>
        </div>
        <div class="col-md-6">
        <p>
          <% if current_user.following.include?(@user.id) %>
          <%= link_to "Following", unfollow_path(id: @user.id), class: "btn btn-primary", id: "unfollow_btn" %>
          <% else %>
          <% if current_user.id != @user.id %>
          <%= link_to "Follow", now_following_path(id: @user.id), class: "btn btn-primary" %>
          <% end %>
          <% end %>        
        </p>
        </div>
      </div>
      <div class="panel-body">
        <div class="col-md-6">
           <div style= 'padding:1px; border:1px;'>
            <% if @user.avatar.blank? == false %>
            <%= image_tag @user.avatar.url, size:100, class: "user-pic-nav" %>
            <% end %> 
          </div>
        </div>
        <div class="col-md-6">
           <div>
            <p>Name: <%= @user.name %></p>
            <p>Location: <%= @user.location %></p>
            <p>Bio: <%= @user.bio %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <div class="col-md-6">

  <div>
  <div>
  <div class="panel panel-success">
    <div class="panel-heading">
        Twitter Feed      
    </div>
    <div class="panel-body">
    <% @user.tweets.each do |tweet| %>
      <div class="well">
        <p>
          <%= image_tag tweet.user.avatar.url, class: "user-pic-md img-circle", height: '40', width: '40' %> 
          <%= link_to tweet.user.name, show_user_path(id: tweet.user_id) %> 
          @<%= link_to tweet.user.username, show_user_path(id: tweet.user_id) %> 
          â€¢ 
          <%= time_ago_in_words(tweet.created_at) if Time.now - tweet.created_at < 86400 %> 
          <%= tweet.created_at.strftime('%b%e') if Time.now - tweet.created_at > 86400 %> 
        </p>
        <p><%= tweet.message.html_safe %></p>
      </div>
    <% end %>
    </div>
    </div>
  </div>
  </div>
  </div>
  <div class="row">
    <div class='pull-right'>
      <p>
        <%= link_to 'Compose New Tweet', new_tweet_path, class: "btn btn-primary" %>
      </p>
    </div>
  </div>
  
  </div>
  </div>
  



